[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status
	ci = commit
	ca = commit -a
	br = branch
	co = checkout
	df = diff
	dfs = diff --cached
	lg = log -p
	lol = log --date-order --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --date-order --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files

[user]
	name = Scott Petersen
	email = petersen@dunedain289.com
[core]
	quotepath = false
	editor = mvim -f --nomru -c \"au VimLeave * !open -a Terminal\"
[push]
	default = simple
[credential]
	helper = osxkeychain
